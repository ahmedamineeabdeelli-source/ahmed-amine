print ("Hello Today")
print (" what would you like to drink")
drink = input()
print("you chose to drink", drink)
if drink == "coffee":
    print ("with sugar or without")
    sugar = input()
if sugar == "with sugar":
    print ("here is your coffee with sugar")
elif sugar == "without":
    print("here is your coffee without sugar sir")
else:
    print("sorry we have only two options")
if drink == "tea":
    print ("red or green") 
    tea= input()
    if tea == "red":
        print ("here is your drink sir ")
    elif tea == "green" :
        print ("here is your tea sir ")
    else : 
        print("sorry green or red only")
elif drink !="coffee" and drink !="tea" :
    drink= "water" 
    print("here is you water sir")   
else : 
    print("sorry we don't have that but you can choose something else" )
    something_else = input()
    if something_else == "coffee" or something_else == "tea":
        print ("thank you for choosing our service")
    else : 
        print("thank you for vivsisting us")
        print("have a nice day")
print ("end of program")
